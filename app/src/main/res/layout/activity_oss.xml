<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_white">

    <include layout="@layout/layout_toolbar"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/margin_20"
        android:padding="@dimen/margin_15"
        android:background="@drawable/bg_corner_white_line_primary">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="备份到云端"
            android:textStyle="bold"
            android:textColor="@color/primary_color"
            android:textSize="18sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_line"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginBottom="@dimen/margin_10"
            android:background="@color/primary_color"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/sync_up_tip_upload"
            android:textColor="@color/primary_color"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/tv_sync_choose_upload"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:background="@drawable/bg_corner_primary"
            android:text="使用"
            android:textSize="15sp"
            android:textColor="@color/primary_white"
            android:layout_marginTop="@dimen/margin_10"
            android:gravity="center"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/margin_20"
        android:padding="@dimen/margin_15"
        android:background="@drawable/bg_corner_white_line_primary">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="同步到本地"
            android:textStyle="bold"
            android:textColor="@color/primary_color"
            android:textSize="18sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_line"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginBottom="@dimen/margin_10"
            android:background="@color/primary_color"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sync_up_tip_download"
            android:textColor="@color/primary_color"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/tv_sync_choose_download"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:background="@drawable/bg_corner_primary"
            android:text="使用"
            android:textSize="15sp"
            android:textColor="@color/primary_white"
            android:layout_marginTop="@dimen/margin_10"
            android:gravity="center"/>

    </LinearLayout>


</LinearLayout>