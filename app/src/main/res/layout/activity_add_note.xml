<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rl_add_note_rootview"
    android:background="@color/primary_white"
    android:fillViewport="true">

        <include layout="@layout/layout_toolbar"
            android:id="@+id/tb_add_note"/>

        <ScrollView
            android:id="@+id/sv_add_note"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1"
            android:fillViewport="true">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/ll_add_note_header"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                                <EditText
                                    android:id="@+id/et_add_note_title"
                                    android:layout_width="match_parent"
                                    android:layout_height="35dp"
                                    android:layout_margin="@dimen/margin_10"
                                    android:hint="@string/hint_add_note_title"
                                    android:gravity="center_vertical"
                                    android:background="@null"/>

                                <View
                                    android:layout_width="200dp"
                                    android:layout_height="@dimen/margin_line"
                                    android:background="@color/primary_line"/>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:layout_margin="@dimen/margin_10"
                                    android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/tv_add_note_time_left"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:paddingTop="@dimen/margin_small"
                                            android:paddingBottom="@dimen/margin_small"
                                            android:paddingLeft="@dimen/margin_10"
                                            android:paddingRight="@dimen/margin_10"
                                            android:text="2017-01-01"
                                            android:textColor="@color/primary_blue_light"
                                            android:textSize="16dp"
                                            android:background="@drawable/bg_corner_gray_light"/>

                                        <TextView
                                            android:id="@+id/tv_add_note_time_right"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="@dimen/margin_5"
                                            android:paddingTop="@dimen/margin_small"
                                            android:paddingBottom="@dimen/margin_small"
                                            android:paddingLeft="@dimen/margin_10"
                                            android:paddingRight="@dimen/margin_10"
                                            android:text="13:23"
                                            android:textColor="@color/primary_blue_light"
                                            android:textSize="16dp"
                                            android:background="@drawable/bg_corner_gray_light"/>

                                        <LinearLayout
                                            android:id="@+id/ll_add_note_info_icons"
                                            android:layout_width="wrap_content"
                                            android:layout_height="@dimen/margin_20"
                                            android:layout_marginLeft="@dimen/margin_15"
                                            android:gravity="center_vertical"
                                            android:orientation="horizontal"/>

                                </LinearLayout>

                                <android.support.v7.widget.RecyclerView
                                    android:id="@+id/rv_add_note_pic"
                                    android:layout_width="250dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/margin_15">

                                </android.support.v7.widget.RecyclerView>

                        </LinearLayout>




                        <EditText
                            android:id="@+id/et_add_note_content"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_10"
                            android:layout_marginRight="@dimen/margin_10"
                            android:layout_marginTop="@dimen/margin_10"
                            android:hint="@string/hint_add_note_content"
                            android:background="@null"
                            android:gravity="start"/>

                        <TextView
                            android:id="@+id/tv_add_note_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_5"
                            android:layout_marginLeft="@dimen/margin_10"
                            android:background="@drawable/bg_corner_dash_red"
                            android:paddingLeft="@dimen/margin_5"
                            android:paddingRight="@dimen/margin_5"
                            android:text="0"
                            android:textColor="@color/primary_color"
                            android:textSize="16sp"/>

                </LinearLayout>


        </ScrollView>

        <LinearLayout
            android:id="@+id/rl_add_note_menu"
            android:layout_width="match_parent"
            android:layout_height="@dimen/add_note_bottom_height"
            android:background="@color/add_note_bar_menu"
            android:orientation="horizontal">


                <ImageView
                    android:id="@+id/iv_add_note_select_emotion"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingTop="@dimen/margin_8"
                    android:paddingBottom="@dimen/margin_8"
                    android:src="@drawable/icon_add_menu_emotion"
                    android:scaleType="centerInside"
                    />

                <View
                    android:layout_width="@dimen/margin_line"
                    android:layout_height="match_parent"
                    android:background="@color/primary_line_light"/>

                <ImageView
                    android:id="@+id/iv_add_note_take_photo"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingTop="@dimen/margin_8"
                    android:paddingBottom="@dimen/margin_8"
                    android:src="@drawable/icon_add_menu_photo"
                    android:scaleType="centerInside"/>


        </LinearLayout>

</LinearLayout>