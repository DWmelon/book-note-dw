<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/layout_toolbar"/>

    <TextView
        android:id="@+id/tv_sync_download_check"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_20"
        android:text="检查数据"
        android:textColor="@color/primary_white"
        android:textSize="18sp"
        android:background="@drawable/bg_corner_primary"/>

    <TextView
        android:id="@+id/tv_sync_download_start"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_20"
        android:text="开始下载"
        android:textColor="@color/primary_white"
        android:textSize="18sp"
        android:background="@drawable/bg_corner_primary"/>

    <ImageView
        android:id="@+id/iv_sync_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/margin_15"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/tv_sync_download_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sync_download_need_total_count"
            android:textColor="@color/primary_black"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/tv_sync_download_success"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_5"
            android:text="@string/sync_download_need_success_count"
            android:textColor="@color/primary_black"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/tv_sync_download_fail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_5"
            android:text="@string/sync_download_need_fail_count"
            android:textColor="@color/primary_black"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/tv_sync_download_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_5"
            android:visibility="gone"
            android:text="@string/sync_download_ing"
            android:textColor="@color/primary_black"
            android:textSize="18sp"/>

    </LinearLayout>

</LinearLayout>