<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/primary_black"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/primary_black"
            android:paddingTop="@dimen/margin_15"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/left_recycle_height"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:visibility="gone">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_20"
                    android:src="@drawable/icon_left_lock"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_25"
                    android:text="加密日记"
                    android:textSize="16sp"
                    android:textColor="@color/primary_white"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/left_recycle_height"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/margin_20"
                android:gravity="center_vertical"
                android:visibility="gone">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_left_good"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_25"
                    android:text="给我们好评"
                    android:textSize="16sp"
                    android:textColor="@color/primary_white"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_left_sync"
                android:layout_width="match_parent"
                android:layout_height="@dimen/left_recycle_height"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/margin_20"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_left_good"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_25"
                    android:text="备份微记"
                    android:textSize="16sp"
                    android:textColor="@color/primary_white"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_left_advice"
                android:layout_width="match_parent"
                android:layout_height="@dimen/left_recycle_height"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/margin_20"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_left_good"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_25"
                    android:text="意见反馈"
                    android:textSize="16sp"
                    android:textColor="@color/primary_white"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_left_setting"
                android:layout_width="match_parent"
                android:layout_height="@dimen/left_recycle_height"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/margin_20"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_left_good"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_25"
                    android:text="设置"
                    android:textSize="16sp"
                    android:textColor="@color/primary_white"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="1">

            </LinearLayout>


            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_left_yun"
                    android:layout_marginLeft="@dimen/margin_15"
                    android:layout_marginTop="@dimen/margin_5"
                    android:layout_marginBottom="@dimen/margin_5"
                    android:scaleType="centerInside"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_15"
                    android:text="上次同步云：2017-08-01"
                    android:textSize="14sp"
                    android:textColor="@color/primary_white"/>

            </LinearLayout>
            <!--<LinearLayout-->
            <!--android:id="@+id/rv_left_drawer_emotion"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:orientation="horizontal"/>-->

            <!--<LinearLayout-->
            <!--android:id="@+id/rv_left_drawer_weather"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:orientation="horizontal"/>-->

            <!--<LinearLayout-->
            <!--android:id="@+id/rv_left_drawer_theme"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:orientation="horizontal"/>-->



        </LinearLayout>

    </ScrollView>


</LinearLayout>