<resources>

    <!-- Base application theme. -->
    <!--<style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">-->
        <!--&lt;!&ndash; Customize your theme here. &ndash;&gt;-->
    <!--</style>-->

    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary_white</item>
        <item name="colorPrimaryDark">@color/primary_white</item>
        <item name="colorAccent">@color/primary_color</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/BaseAppTheme">
    </style>

    <style name="TabTextView" parent="android:Widget.TextView">
        <item name="android:textColor">@color/tab_bar_txt</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">2</item>
        <item name="android:gravity">center_horizontal</item>
        <!--<item name="android:layout_marginBottom">@dimen/margin_min</item>-->
    </style>

    <style name="TabLayout">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center_horizontal</item>

    </style>

    <style name="TabImageView">
        <item name="android:layout_weight">3</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="LoginEditText" parent="android:Widget.EditText">
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/primary_black</item>
        <item name="android:textColorHint">@color/login_et_hint_color</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_height">@dimen/login_et_h</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/et_bg_login</item>
        <item name="android:paddingLeft">@dimen/margin_small</item>
    </style>

    <style name="LoginforgetPWText" parent="android:Widget.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/primary_color</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="LoginBtnActivity" parent="android:Widget.TextView">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/primary_white</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">@dimen/login_btn_h</item>
        <item name="android:background">@drawable/selector_sign_btn2</item>
    </style>

    <style name="Widget.Material.ProgressBar" parent="Base.Widget.AppCompat.ProgressBar"/>

    <!-- 拍照 -->
    <style name="SettingItemList">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:divider">#B2323333</item>
        <item name="android:dividerHeight">1px</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:choiceMode">singleChoice</item>
        <item name="android:scrollbars">none</item>
    </style>

    <style name="OptionsLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/option_item_height</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="OptionsItemClickable" parent="@style/OptionsLayout">
        <item name="android:paddingLeft">14dp</item>
        <item name="android:background">@drawable/bg_transparent_yellow</item>
    </style>

    <style name="OptionsItemIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">12dp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="OptionsItemText">
        <item name="android:textColor">@drawable/advance_setting_item_text_color</item>
        <item name="android:textSize">@dimen/personal_eamil_text_size</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="OptionsItemIconMoreNew">
        <item name="android:layout_width">6dp</item>
        <item name="android:layout_height">6dp</item>
        <item name="android:layout_marginRight">12dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">@drawable/ic_new_tag</item>
    </style>

    <style name="OptionsItemIconMore">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">12dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:src">@drawable/advance_setting_item_more_icon</item>
    </style>

    <style name="TranslucentStripsWhite">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">#c9cdd1</item>
    </style>

    <style name="ProfileItemLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/profile_item_height</item>
        <item name="android:paddingBottom">@dimen/margin_small</item>
        <item name="android:paddingTop">@dimen/margin_small</item>
        <item name="android:background">@drawable/selector_list_item</item>
        <item name="android:paddingLeft">@dimen/margin_22</item>
        <item name="android:paddingRight">@dimen/margin_22</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="ProfileItemTextView" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:textColor">@color/first_title_color</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawableRight">@drawable/setting_item_arrow</item>
        <item name="android:layout_marginLeft">@dimen/margin_18</item>
    </style>

    <style name="Theme.DialogActivity" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">@null</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

</resources>
